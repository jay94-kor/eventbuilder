{
  "extends": ["stylelint-config-standard"],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "apply",
          "config",
          "layer",
          "tailwind",
          "variants",
          "responsive",
          "screen",
          "theme"
        ]
      }
    ],
    "at-rule-no-deprecated": null,
    "function-no-unknown": [
      true,
      {
        "ignoreFunctions": ["theme", "screen", "oklch"]
      }
    ],
    "import-notation": null,
    "lightness-notation": null,
    "hue-degree-notation": null,
    "color-hex-length": null,
    "at-rule-empty-line-before": null,
    "rule-empty-line-before": null,
    "no-descending-specificity": null,
    "no-invalid-position-at-import-rule": null,
    "custom-property-pattern": "^--[a-z0-9-]+$",
    "selector-class-pattern": "^[a-z][a-zA-Z0-9]+(?:-[a-z][a-zA-Z0-9]+)*$",
    "value-no-vendor-prefix": null,
    "property-no-vendor-prefix": null,
    "declaration-property-value-allowed-list": {
      "color": ["/^var\\(--color-.+\\)$/", "/^oklch\\(var\\(--color-.+\\).*\\)$/"],
      "background-color": ["/^var\\(--bg-.+\\)$/", "/^oklch\\(var\\(--bg-.+\\).*\\)$/"],
      "border-color": ["/^var\\(--border-.+\\)$/", "/^oklch\\(var\\(--border-.+\\).*\\)$/"],
      "box-shadow": ["/^var\\(--shadow-.+\\)$/"],
      "padding": ["/^var\\(--spacing-.+\\)$/"],
      "margin": ["/^var\\(--spacing-.+\\)$/"],
      "border-radius": ["/^var\\(--radius-.+\\)$/"],
      "transition-duration": ["/^var\\(--transition-.+\\)$/"]
    },
    "order/properties-order": [
      "content",
      "position",
      "z-index",
      "top",
      "right",
      "bottom",
      "left",
      "display",
      "flex",
      "flex-direction",
      "flex-grow",
      "flex-shrink",
      "flex-basis",
      "flex-wrap",
      "justify-content",
      "align-items",
      "align-content",
      "align-self",
      "order",
      "grid",
      "grid-area",
      "grid-template",
      "grid-template-rows",
      "grid-template-columns",
      "grid-row",
      "grid-column",
      "grid-auto-rows",
      "grid-auto-columns",
      "grid-auto-flow",
      "grid-gap",
      "gap",
      "width",
      "min-width",
      "max-width",
      "height",
      "min-height",
      "max-height",
      "margin",
      "margin-top",
      "margin-right",
      "margin-bottom",
      "margin-left",
      "padding",
      "padding-top",
      "padding-right",
      "padding-bottom",
      "padding-left",
      "float",
